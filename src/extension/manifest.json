{
    "manifest_version": 2,
    "name": "My Angular Extension",
    "version": "1.0",
    "description": "An Angular-based web extension with OAuth2",
    "permissions": [
      "activeTab",
      "storage",
      "identity"
    ],
    "browser_action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      "index.html",
      "*.js",
      "*.css"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }